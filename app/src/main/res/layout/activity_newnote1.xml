<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newtitleofactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newnote">

    <TextView
        android:id="@+id/textofnote1"
        android:layout_width="363dp"
        android:layout_height="492dp"
        android:background="@drawable/titlebox"
        android:ems="10"
        android:gravity="start"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:textSize="24sp"
        android:scrollbars="vertical"
        android:clickable="false"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleofnote1"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/titleofnote1"
        android:layout_width="245dp"
        android:layout_height="64dp"
        android:ems="10"
        android:background="@color/cardview_light_background"
        android:textAllCaps="true"
        android:clickable="false"
        android:gravity="center"
        android:maxLength="2000"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/gray"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <Button
        android:id="@+id/save1"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/roundbutton"
        android:elevation="10dp"
        android:fontFamily="@font/typoroundbold"
        android:letterSpacing="0.35"
        android:text="SAVE"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="@+id/textofnote"
        app:layout_constraintTop_toBottomOf="@+id/textofnote"
        app:layout_constraintVertical_bias="0.206" />

</androidx.constraintlayout.widget.ConstraintLayout>